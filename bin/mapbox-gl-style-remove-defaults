#!/usr/bin/env node

const fs = require('fs');
const yargs = require('yargs/yargs');
const { hideBin } = require('yargs/helpers');

const { removeDefaults } = require('../dist/main');

const argv = yargs(hideBin(process.argv))
  .usage('Usage: $0 infile')
  .example('$0 style.json > style-with-no-defaults.json')
  .parse();

let inFile = argv._[0];
fs.readFile(inFile, 'utf8', (err, data) => {
  if (err) {
    console.error(err);
    process.exit(1);
  }

  const inStyle = JSON.parse(data);
  const outStyle = JSON.stringify(removeDefaults(inStyle));
  console.log(outStyle);
});
